alias apd='sudo apt update && sudo apt upgrade && flatpak update'
alias mkdir="mkdir -pv"
alias ..="cd .."
alias ~="cd ~"

mkcd ()
{
  mkdir -p -- "$1" && cd -P -- "$1"
}

# Exa aliases
alias ls='exa --icons --group-directories-first'
alias la='exa -a --icons --group-directories-first'
alias ll='exa -laF --icons --group-directories-first'
alias lh='exa -lah --icons --group-directories-first'
alias lR='exa -R --icons --group-directories-first'